<div class="wrapper">
	<!-- Sidebar -->
	<div id="sidebar-wrapper">
		<h3>CodeClarity</h3>
		<ul class="sidebar-nav">
			<li class="sidebar-brand">
				<h4>Tags</h4>
			</li>
			<!-- <li class="tags">
				<a href="#">Dummy tag</a>
			</li> -->
			<div class="tags sidebar">
					<%= render partial: 'topTenTag',  locals: {limit: 10} %>
					<% if @totalTagNum > 10 %>
					<input class="tag-search" data-provide="typeahead" placeholder="Search <%= @totalTagNum %> available tags">
					<% end %>
			</div>
			<li class="sidebar-brand">
				<h4>Filters</h4>
			</li>
			
			<li class="filters">
				<a href="#">Dummy</a>
			</li>
			<li class="filters">
				<a href="#">Dummy</a>
			</li>
			<li class="filters">
				<a href="#">Dummy</a>
			</li>
			<li class="filters">
				<a href="#">Dummy</a>
			</li>
		</ul>
	</div>
	<!-- /#sidebar-wrapper -->

	<!-- Main content -->
	<div id="page-content-wrapper">
		<div class="container-fluid">
			<div class="row title-menu">
				<div class="project-title col-sm-8" contenteditable="true"><%= @project.name %></div>
				<div class="dropdown col-sm-4">
					<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Projects
						<span class="caret"></span>
					</button>
					<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
						<% @allProjects.each do |project| 
							this = (project.id == @project.id) ? "disabled" : ""
							%>
							<li class="project-dropdown-item <%= this %>"><a href="#"><%= project.name %></a></li>
						<% end %>
						<li role="separator" class="divider"></li>
						<li class="project-dropdown-item add-new"><a href="#">Add new</a></li>
					</ul>
				</div>
			</div>
			<div class="row tabs">
				<ul class="sublime-tabs">
					<li class="sublime-tabs__tab active" data-project-id="<%= @project.id %>">
						<a href="#" class="sublime-tabs__link" data-type="html"><%= @project.name %></a>
						<i class="fa fa-times delete-tag" aria-hidden="true"></i>
					</li>
					<li class="sublime-tabs__tab new-tab">
				        <a href="#" class="sublime-tabs__link"><i class="fa fa-plus" aria-hidden="true"></i></a>
			      	</li>
			    </ul>
			</div>

			<div class="row tree-container">
				<div class="new-tree active tree card col-md-12" data-project-id="<%= @project.id %>">		
					<ul class="tree" id="sortable">
						<li class="item root" data-itemid="0" id="0">
							<div class="root-fake-handler"></div>
							<ul class="children">
								<% if @itemsWithNoParent.length != 0 %> 
									<%= render 'item', itemId: 0 %>
								<% else %>
									<li class="item" id="item_">
										<div class="tree_label item-name first-item-placeholder" placeholder="Click to input your first item" contenteditable="true" data-name="name"></div>
									</li>
								<% end %>
							</ul>
						</li>
					</ul>
				</div>
				
				<div class="object-editor closed card col-md-5">
					<div class="close-sign">
						<i class="fa fa-times-circle" aria-hidden="true"></i>
					</div>
					<ul class="breadcrumb-onepage">
					</ul>
					<p>
						<span class="detail-title">ID:</span>
						<span class="item-id" data-name="id" data-itemid></span>
					</p>
					<p>
						<span class="detail-title">Name:</span>
						<span class="item-name" contenteditable="true" data-name="name" data-itemid></span>
					</p>
					<p>
						<span class="detail-title">Parent:</span>
						<span class="item-parent" data-name="parent_name" data-itemid></span>
					</p>
					<p>
						<span class="detail-title">Description:</span>
						<span class="item-desc" contenteditable="true" data-name="description" data-itemid></span>
					</p>
					<p>
						<span class="detail-title">Creator:</span>
						<span class="item-by" contenteditable="true" data-name="by_name" data-itemid></span>
					</p>
					<div class="tag-area">
						<span class="detail-title">Tags</span>
						<div class='tags'>
							<div class="tag-area"></div>
							<input placeholder='Add tag' data-provide="typeahead" type='text'>
						</div>
					</div>
				</div>
			</div>

			<!-- Loader at bottom right corner -->
			<div class="loader">
				<div class="cube-wrapper">
					<div class="cube-folding">
						<span class="leaf1"></span>
						<span class="leaf2"></span>
						<span class="leaf3"></span>
						<span class="leaf4"></span>
					</div>
					<span class="loading" data-name="Loading">Loading</span>
				</div>
			</div>
		</div>

		<!-- Dialog box -->
		<div id="dialog-confirm" title="Delete item with children?">
			<p>
				<span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Removing this item will also remove its children. Are you sure?</p>
		</div>
